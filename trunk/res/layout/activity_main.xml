<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/AdaName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/ada_name" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/AdaPortrait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/lovelace_portrait" 
            android:contentDescription="@string/ada_portrait_desc"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.25" />

            <TextView
                android:id="@+id/AdaDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8.07"
                android:gravity="fill_horizontal"
                android:maxWidth="300dp"
                android:text="@string/ada_description" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.25" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>